{
    "name": "@arrival/doc-builder",
    "version": "0.0.1",
    "private": false,
    "scripts": {
        "build:package": "webpack --display-error-details --config webpack.config.package.js --p --progress --mode production",
        "lint": "tslint 'src/**/*.{ts,tsx}'",
        "test": "jest --coverage",
        "test:ci": "jest --ci --coverage",
        "tsc": "tsc",
        "deploy:publish": "npm unpublish @arrival/doc-builder && npm publish ./dist",
        "hooks:pre-push": "yarn test && lint-staged"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn hooks:pre-push"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn lint"
        ]
    },
    "dependencies": {
        "@eigenspace/helper-scripts": "1.0.1",
        "@phenomnomnominal/tsquery": "3.0.0",
        "typescript": "3.3.1"
    },
    "devDependencies": {
        "@eigenspace/codestyle": "1.1.12",
        "@types/jest": "22.2.2",
        "@types/node": "11.9.4",
        "@types/react": "16.8.3",
        "clean-webpack-plugin": "1.0.1",
        "copy-webpack-plugin": "4.6.0",
        "dts-bundle": "https://github.com/Danilqa/dts-bundle.git#build",
        "husky": "1.3.1",
        "jest": "23.6.0",
        "lint-staged": "8.1.1",
        "ts-jest": "23.10.5",
        "ts-loader": "5.3.3",
        "tslint": "5.12.1",
        "webpack": "4.29.0",
        "webpack-cli": "3.2.1"
    },
    "main": "index.js",
    "types": "index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/cybernated/doc-builder.git"
    },
    "license": "MIT"
}
